<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/title_activity"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSpotyfi"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/color_orange"
        android:text="@string/btn_title_spotify_streamer"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btnScoresApp"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSpotyfi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_orange"
        android:text="@string/btn_title_scores"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnScoresApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_orange"
        android:text="@string/btn_title_library"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btnBuildIt"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLibrary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_orange"
        android:text="@string/btn_title_build_it"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btnXyzReader"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBuildIt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_orange"
        android:text="@string/btn_title_xyz_reader"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/btnCapstone"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnXyzReader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_red"
        android:text="@string/btn_title_capstone"
        android:textColor="@color/text_color" />


</RelativeLayout>
